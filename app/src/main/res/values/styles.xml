<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OnBoardingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FF7272</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="OllyButton" parent="AppTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BorderOnlyButton" parent="OllyButton">
        <item name="android:background">@drawable/button_border_background</item>
    </style>

    <style name="PrimaryButton" parent="OllyButton">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ButtonProgressBar" parent="AppTheme">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateTint">@color/primaryTextColor</item>
        <item name="android:translationZ">50dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="PrimaryEditText" parent="AppTheme">
        <item name="android:letterSpacing">0.1</item>
        <item name="android:maxLength">10</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>
